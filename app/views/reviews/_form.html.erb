<strong><p class="text-left mx-3">レビューを書く</p></strong>
<% if review.errors.any? %>
  <div class="notification is-danger">
    <h2><%= review.errors.count %>件のエラーがあります。</h2>
  </div>
<% end %>
<div class="rating-box">
  <%= form_with model: review, url: private_business_user_reviews_path(private_business_user), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <div class="form-area">
      <%= f.hidden_field :private_business_user_id, value: private_business_user.id %>
      <%= f.hidden_field :score, id: "rating-value" %>
      <%= f.text_area :content, class: "textarea" %>
      <%= f.submit "保存", class: "button" %>
      <%= link_to "他のレビューを見る", private_business_user_reviews_path(private_business_user), class: "button-link m-1" %>
    </div>
  <% end %>
</div>
