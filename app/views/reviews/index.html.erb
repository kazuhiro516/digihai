<div class="container">
  <div class="card">
    <div class="column">
      <div class="card">
        <header class="card-header">
          <h2 class="card-header-title">
            <%= @private_business_user.name %>
          </h2>
        </header>
        <div class="card-content">
          <div class="content average-score">
            <div class="star-rating mb-2">
              <div class="star-rating-front" style="width: <%= @private_business_user.review_score_percentage %>%">★★★★★</div>
              <div class="star-rating-back">★★★★★</div>
            </div>
            <div class="average-score-display ml-3 pt-2"><%= @private_business_user.avg_score %>点（<%= @private_business_user.reviews.count %>件のレビュー）
            </div>
          </div>
        </div>
      </div>
      <table class="table is-fullwidth has-text-centered">
        <thead>
          <tr>
            <th>企業担当者</th><th>点数</th><th>評価内容</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.user.name %></td>
              <td><%= review.score %></td>
              <td><%= review.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
